<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.xbb.la.xbbemployee.widget.RoundImageView
            android:id="@+id/employee_head_img"
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/dp_hundred"
            android:layout_height="@dimen/dp_hundred"
            android:scaleType="center"
            android:layout_marginTop="@dimen/dp_eighty"
            android:src="@mipmap/login_head_default_img" />
        <LinearLayout
            android:layout_marginTop="@dimen/dp_fourty"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_fourty"
            android:paddingRight="@dimen/dp_fourty"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/login_user_img"/>
                <EditText
                    android:textCursorDrawable="@null"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/dp_ten"
                    android:textColorHint="@color/et_hint_color"
                    android:id="@+id/login_user_et"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_fifty"
                    android:background="@null"
                    android:hint="@string/login_user_hint"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_one"
                android:background="@mipmap/login_split_img"/>

            <LinearLayout
                android:layout_marginTop="@dimen/dp_fifteen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/login_pwd_img"/>
                <EditText
                    android:textCursorDrawable="@null"
                    android:textColor="@color/white"
                    android:textColorHint="@color/et_hint_color"
                    android:background="@null"
                    android:layout_marginLeft="@dimen/dp_ten"
                    android:inputType="textPassword"
                    android:layout_marginTop="@dimen/dp_five"
                    android:id="@+id/login_password_et"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_fifty"
                    android:hint="@string/login_password_hint"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_one"
                android:background="@mipmap/login_split_img"/>

            <LinearLayout
                android:id="@+id/login_forget_layout"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/dp_fifteen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/login_forget_img"/>
                <TextView
                    android:layout_marginLeft="@dimen/dp_five"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:textColor="#819ec5"
                    android:text="@string/login_forgetpwd_label"/>
            </LinearLayout>


            <Button
                android:background="@mipmap/login_btn_bg"
                android:layout_marginTop="@dimen/dp_thirty"
                android:id="@+id/login_submit_btn"
                android:layout_width="match_parent"
                android:textSize="@dimen/sp_sixteen"
                android:textColor="@color/white"
                android:layout_height="@dimen/dp_fifty"
                android:text="@string/login_submit_btn"/>

        </LinearLayout>
    </LinearLayout>

</ScrollView>
