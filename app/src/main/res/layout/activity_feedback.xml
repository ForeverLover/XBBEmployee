<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/label_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_twenty"
        android:layout_marginRight="@dimen/dp_twenty"
        android:layout_marginTop="@dimen/dp_fifteen"
        android:background="@drawable/area_input_bg"
        android:orientation="vertical">

        <EditText
            android:padding="@dimen/dp_five"
            android:id="@+id/feedback_content_et"
            android:maxLength="200"
            android:hint="@string/feedback_et_hint"
            android:textColorHint="@color/et_hint_color_two"
            android:textColor="@color/main_text_color"
            android:gravity="top"
            android:textSize="@dimen/sp_forteen"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_one"
            android:layout_weight="1"
            android:background="@null" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="@dimen/dp_five"
            android:layout_marginRight="@dimen/dp_ten"
            android:layout_marginTop="@dimen/dp_five"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/content_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/et_hint_color_two"
                android:textSize="@dimen/sp_twelve" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/et_hint_color_two"
                android:text="/200"
                android:textSize="@dimen/sp_twelve" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/feedback_submit_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_thirty"
        android:layout_marginRight="@dimen/dp_thirty"
        android:layout_marginTop="@dimen/dp_sixty"
        android:background="@drawable/btn_solid_s_bg"
        android:text="@string/feedback_submit"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_sixteen" />


</LinearLayout>