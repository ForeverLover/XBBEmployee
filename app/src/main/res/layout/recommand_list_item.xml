<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:paddingRight="@dimen/dp_twenty"
        android:paddingTop="@dimen/dp_ten"
        android:paddingBottom="@dimen/dp_ten"
        android:paddingLeft="@dimen/dp_twenty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_sixteen"
            android:textColor="@color/main_text_color"
            android:text="@string/recommand_content"/>
        <TextView
            android:id="@+id/recommand_diy_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_sixteen"
            android:textColor="@color/theme_color"/>
    </LinearLayout>

       <!-- android:paddingTop="@dimen/dp_ten"
        android:paddingBottom="@dimen/dp_ten"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="@dimen/dp_twenty"
        android:paddingLeft="@dimen/dp_twenty">

        <LinearLayout
            android:layout_width="@dimen/dp_zero"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <ImageView
                android:layout_marginLeft="@dimen/dp_two"
                android:layout_marginRight="@dimen/dp_two"
                android:id="@+id/recommand_describe_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_sixty"
                android:layout_marginTop="@dimen/dp_five"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />

           <!-- <TextView
                android:textColor="@color/main_text_color"
                android:id="@+id/recommand_describe_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_five"
                android:singleLine="true"
                android:text="@string/recommand_layout_label"
                android:visibility="invisible"
                android:textSize="@dimen/sp_forteen" />-->
        </LinearLayout>

        <LinearLayout
            android:id="@+id/recommand_describe_layout"
            android:layout_width="@dimen/dp_zero"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="horizontal">

            <View
                android:layout_width="@dimen/dp_one"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_ten"
                android:layout_marginRight="@dimen/dp_ten"
                android:background="@color/split_color" />

            <LinearLayout
                android:layout_width="@dimen/dp_zero"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/recommand_describe_img_one"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_sixty"
                    android:layout_marginTop="@dimen/dp_five"
                    android:scaleType="centerCrop" />

               <!-- <TextView
                    android:visibility="invisible"
                    android:textColor="@color/main_text_color"
                    android:id="@+id/recommand_describe_content_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_five"
                    android:text="@string/recommand_describe_label"
                    android:textSize="@dimen/sp_forteen" />-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dp_zero"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_five"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/recommand_describe_img_two"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_sixty"
                    android:layout_marginTop="@dimen/dp_five"
                    android:scaleType="centerCrop" />

                <!--<TextView
                    android:textColor="@color/main_text_color"
                    android:id="@+id/recommand_describe_content_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_five"
                    android:gravity="center"
                    android:textSize="@dimen/sp_sixteen" />-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dp_zero"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_five"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/recommand_describe_img_three"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_sixty"
                    android:layout_marginTop="@dimen/dp_five"
                    android:scaleType="centerCrop" />

                <!--<TextView
                    android:textColor="@color/main_text_color"
                    android:id="@+id/recommand_describe_content_three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_five"
                    android:gravity="center"
                    android:textSize="@dimen/sp_sixteen" />-->
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/recommand_remark_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       >

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_one"
            android:background="@color/split_color"
            android:visibility="gone"/>

        <TextView
            android:textColor="@color/main_text_color"
            android:paddingLeft="@dimen/dp_twenty"
            android:paddingRight="@dimen/dp_twenty"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_thirty_eight"
            android:text="@string/recommand_remark_lable"
            android:gravity="center_vertical"
            android:textSize="@dimen/sp_sixteen" />

        <TextView
            android:textColor="@color/main_text_color"
            android:layout_marginLeft="@dimen/dp_twenty"
            android:layout_marginRight="@dimen/dp_twenty"
            android:id="@+id/recommand_remark_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_five"
            android:text="@string/recommand_remark_lable"
            android:textSize="@dimen/sp_forteen" />
    </LinearLayout>
</LinearLayout>
