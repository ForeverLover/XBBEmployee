<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp_twenty"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="@dimen/dp_fifty_six">
        <ImageView
            android:id="@+id/msg_mark_img"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/msg_normal_img"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:layout_marginLeft="@dimen/dp_ten"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="@dimen/dp_eight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/msg_from_tv"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="@color/main_text_color"
                    android:textSize="@dimen/sp_forteen"
                    android:layout_height="wrap_content"
                    android:text="二百助手"/>
                <TextView
                    android:id="@+id/msg_time_tv"
                    android:layout_marginLeft="@dimen/dp_ten"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="@color/main_text_color"
                    android:textSize="@dimen/sp_twelve"
                    android:layout_height="wrap_content"
                    android:text="15:32"/>
            </LinearLayout>

            <TextView
                android:layout_marginBottom="@dimen/dp_five"
                android:id="@+id/msg_content_tv"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:maxLength="18"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/sp_twelve"
                android:layout_height="wrap_content"
                android:text="二百助手"/>

        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/msglist_split_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_one"
        android:background="@color/split_color"/>


</LinearLayout>