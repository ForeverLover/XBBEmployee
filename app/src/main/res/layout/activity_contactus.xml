<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#50000000"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_twenty"
        android:layout_marginRight="@dimen/dp_twenty"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tel_call_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp_ten"
            android:layout_marginTop="@dimen/dp_ten"
            android:layout_weight="1"
            android:background="@mipmap/select_small_bg"
            android:gravity="center"
            android:text="@string/call_info_label"
            android:textColor="@color/main_text_color"
            android:textSize="@dimen/sp_sixteen" />

        <TextView
            android:id="@+id/tel_cancel_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp_ten"
            android:layout_marginTop="@dimen/dp_five"
            android:layout_weight="1"
            android:background="@mipmap/select_small_bg"
            android:gravity="center"
            android:text="@string/take_photo_cancel"
            android:textColor="@color/main_text_color"
            android:textSize="@dimen/sp_sixteen" />


    </LinearLayout>
</RelativeLayout>