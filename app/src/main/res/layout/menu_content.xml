<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.xbb.la.xbbemployee.widget.RoundImageView
        android:layout_centerHorizontal="true"
        android:id="@+id/pc_head_img"
        android:layout_width="@dimen/dp_hundred"
        android:layout_height="@dimen/dp_hundred"
        android:layout_marginTop="@dimen/dp_fifty"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop"
        android:src="@mipmap/head_img"/>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_thirty"
        android:layout_below="@+id/pc_head_img"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <TextView
            android:layout_marginTop="@dimen/dp_ten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击登录"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/sp_eighteen"/>
        <TextView
            android:layout_marginTop="@dimen/dp_ten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人中心"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/sp_eighteen"/>
        <TextView
            android:layout_marginTop="@dimen/dp_ten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消息"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/sp_eighteen"/>
        <TextView
            android:layout_marginTop="@dimen/dp_ten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/sp_eighteen"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="@dimen/dp_thirty"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <TextView
            android:layout_marginTop="@dimen/dp_ten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退出"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/sp_eighteen"/>

        <TextView
            android:layout_marginTop="@dimen/dp_ten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="v1.0"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/sp_eighteen"/>
    </LinearLayout>
</RelativeLayout>