<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/label_bg"
    android:fillViewport="true"
    android:orientation="vertical"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_twenty"
        android:paddingRight="@dimen/dp_twenty">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_thirty_eight"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/msginfo_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#686868"
                android:textSize="@dimen/sp_forteen" />

            <TextView
                android:id="@+id/msginfo_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_five"
                android:textColor="#686868"
                android:textSize="@dimen/sp_twelve" />
        </LinearLayout>

        <TextView
            android:id="@+id/msginfo_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.1"
            android:textColor="#3d3d3d"
            android:textSize="@dimen/sp_forteen" />
        <View
            android:layout_marginTop="@dimen/dp_thirty"
            android:layout_marginBottom="@dimen/dp_twenty"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_one"
            android:background="@color/split_color"/>
        <TextView
            android:id="@+id/msginfo_toOrder_btn"
            android:layout_gravity="right"
            android:layout_width="@dimen/dp_eighty"
            android:layout_height="@dimen/dp_thirty"
            android:background="@drawable/btn_hollow_s_bg"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/sp_sixteen"
            android:gravity="center"
            android:text="@string/msg_details_to_order"/>
    </LinearLayout>


</ScrollView>