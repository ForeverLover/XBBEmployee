<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#50000000"
    android:orientation="vertical">

    <LinearLayout

        android:id="@+id/dialog_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/take_photo_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_twenty"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_take_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_weight="1"
                android:src="@mipmap/take_photo"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_take_photo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_ten"
                android:text="@string/take_photo_label"
                android:textColor="#000000"
                android:textSize="@dimen/sp_eighteen"
                android:textStyle="bold" />
        </RelativeLayout>


        <View
            android:layout_width="@dimen/dp_one"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_ten"
            android:layout_marginTop="@dimen/dp_ten"
            android:background="@mipmap/split_img_y" />

        <RelativeLayout
            android:id="@+id/pic_photo_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_twenty"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_pick_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_weight="1"
                android:src="@mipmap/pic_photo"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_pick_photo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_ten"
                android:text="@string/pic_photo_label"
                android:textColor="#000000"
                android:textSize="@dimen/sp_eighteen"
                android:textStyle="bold" />
        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_twenty"
        android:layout_marginRight="@dimen/dp_twenty"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/select_big_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pic_take_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/take_photo_label"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/sp_sixteen" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_one"
                android:background="@color/split_color" />

            <TextView
                android:id="@+id/pic_pic_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/pic_photo_label_o"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/sp_sixteen" />
        </LinearLayout>

        <TextView
            android:id="@+id/pic_cancel_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp_ten"
            android:layout_marginTop="@dimen/dp_ten"
            android:layout_weight="1"
            android:background="@mipmap/select_small_bg"
            android:gravity="center"
            android:text="@string/take_photo_cancel"
            android:textColor="@color/main_text_color"
            android:textSize="@dimen/sp_sixteen" />


    </LinearLayout>

</RelativeLayout>
