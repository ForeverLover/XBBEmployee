<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/select_page_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/select_title_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bg_title"
        android:paddingLeft="@dimen/dp_five"
        android:paddingRight="@dimen/dp_five">

        <ImageView
            android:id="@+id/title_left_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_fifteen"
            android:scaleType="fitCenter"
            android:src="@mipmap/title_icon_back"
            android:visibility="visible" />

        <TextView
            android:id="@+id/title_left_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="@string/btn_back"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/title_center_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/title_right_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_fifteen"
            android:scaleType="fitCenter"
            android:visibility="visible" />

        <TextView
            android:id="@+id/title_right_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:orientation="vertical">

        <RelativeLayout

            android:id="@+id/select_title_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_fourty_five"
            android:background="#f6f6f6"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_fifteen"
            android:paddingRight="@dimen/dp_fifteen"
            android:textColor="#646464"
            android:textSize="@dimen/sp_seventeen">

            <TextView
                android:id="@+id/select_cancel_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_five"
                android:text="@string/select_cancel"
                android:textColor="@color/theme_color"
                android:textSize="@dimen/sp_forteen" />

            <TextView
                android:id="@+id/select_confirm_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="@dimen/dp_five"
                android:text="@string/select_ensure"
                android:textColor="@color/theme_color"
                android:textSize="@dimen/sp_forteen" />
        </RelativeLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_hundred_thirty_five"
            android:background="@color/white"
            android:orientation="horizontal">

            <com.xbb.la.xbbemployee.widget.WheelView.widget.WheelView
                android:id="@+id/select_wheel1"
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_weight="1"
                android:background="@color/white" />

            <com.xbb.la.xbbemployee.widget.WheelView.widget.WheelView
                android:id="@+id/select_wheel2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white" />

            <com.xbb.la.xbbemployee.widget.WheelView.widget.WheelView
                android:id="@+id/select_wheel3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white" />
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>
